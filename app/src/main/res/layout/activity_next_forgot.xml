<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    tools:context=".activity.NextForgotActivity">
    <TextView
        android:id="@+id/txtHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Entered Details are:"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        />
    <TextView
        android:id="@+id/txtMobileNumber"
        android:layout_below="@id/txtHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number: "
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/txMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/txtHead"
        android:layout_toRightOf="@id/txtMobileNumber"
        android:textColor="#ffffff"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/txtEmail"
        android:layout_below="@id/txtMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email : "
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/txEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/txtMobileNumber"
        android:layout_toRightOf="@id/txtEmail"
        android:textColor="#ffffff"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        />
</RelativeLayout>