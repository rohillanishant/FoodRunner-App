<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="10dp"
    android:layout_height="140dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:id="@+id/content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgFood"
                android:src="@drawable/foodrunner"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/txtRestrauntName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgFood"
                android:text="Restraunt Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:padding="10dp"/>
            <ImageView
                android:id="@+id/imgRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rating"
                android:layout_toRightOf="@id/imgFood"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="220dp"
                />

            <TextView
                android:id="@+id/txtRestrauntRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="92dp"
                android:layout_toRightOf="@id/imgRating"
                android:text="Rating"
                android:textColor="#E7EC00"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgFav"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/imgFood"
                android:src="@drawable/ic_fav" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtRestrauntName"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imgFood"
                android:paddingLeft="2dp"
                android:text="Price"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_rupee"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtPrice"
                android:text="/person"
                android:textSize="16sp"
                android:layout_below="@id/txtRestrauntName"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
</androidx.cardview.widget.CardView>